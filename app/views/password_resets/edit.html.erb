Reset Password

<%= form_for @user, :url => password_reset_path(params[:id]) do |f| %>
  <% if @user.errors.any? %>
    <% for message in @user.errors.full_messages %>
      <%= message %>
    <% end %>
  <% end %>
  <%= f.password_field :password %>
  <%= f.password_field :password_confirmation %>
  <%= f.submit "Update Password" %>
<% end %>
