<h2><%= @answer.name %></h2>

<%= form_for @answer, url: answer_path(:id => params[:id], :relationship_id => params[:relationship_id]), method: :patch do |f| %>
    <div class="form-group">
      <%= f.radio_button(:status, "yes") %>
      <%= f.label :yes %>
      <%= f.radio_button(:status, "no") %>
      <%= f.label :no %>
      <%= f.radio_button(:status, "maybe") %>
      <%= f.label :maybe %>
    </div>
    <div class="form-group">
      <div><%= f.label :notes_go_here %></div>
      <div><%= f.text_area :notes %></div>
      <%= f.submit :update, class: "btn" %>
    </div>
<% end %>
