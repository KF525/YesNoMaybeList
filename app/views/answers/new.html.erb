<h2><%= @activity.name %></h2>

<%= form_for @answer, url: relationship_answers_path(@actvity, :relationship_id => params[:relationship_id]), method: :post do |f| %>
      <div class="form-group">
        <%= f.radio_button(:status, "yes") %>
        <%= f.label :yes %>
        <%= f.radio_button(:status, "no") %>
        <%= f.label :no %>
        <%= f.radio_button(:status, "maybe") %>
        <%= f.label :maybe %>
      </div>
      <div class="form-group">
        <div><%= f.label :notes_go_here %></div>
        <div><%= f.text_area :notes %></div>
        <%= f.submit :submit, class: "btn" %>
      </div>
<% end %>
